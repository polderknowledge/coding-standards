{
    "name": "polderknowledge/coding-standards",
    "type": "library",
    "description": "The Polder Knowledge coding standards for PHP_CodeSniffer.",
    "keywords": [
        "polderknowledge",
        "coding-standards"
    ],
    "homepage": "https://polderknowledge.com",
    "license": "MIT",
    "require": {
        "php" : "~5.6|~7.0"
    },
    "require-dev": {
        "phpunit/phpunit" : "~4.0||~5.0",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "PolderKnowledge\\CodingStandards\\": "src"
        }
    },
    "autoload-dev": {
        "classmap": [
            "PolderKnowledge/"
        ],
        "psr-4": {
            "PolderKnowledge\\SniffsTest\\": "tests/SniffsTest"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "process-timeout": 5000,
        "sort-packages": true
    }
}
