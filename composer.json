{
    "name": "polderknowledge/coding-standards",
    "type": "phpcodesniffer-standard",
    "description": "The Polder Knowledge coding standards for PHP_CodeSniffer.",
    "keywords": [
        "polderknowledge",
        "coding-standards",
        "coding",
        "standard",
        "standards",
        "cs",
        "code",
        "style",
        "sniffer",
        "rules",
        "sniffs",
        "checks"
    ],
    "homepage": "https://polderknowledge.com",
    "license": "MIT",
    "require": {
        "php": "^7.1",
        "doctrine/coding-standard": "^6.0"
    },
    "require-dev": {
        "roave/security-advisories": "dev-master"
    },
    "autoload-dev": {
        "classmap": [
            "PolderKnowledge/"
        ],
        "psr-4": {
            "PolderKnowledge\\SniffsTest\\": "tests/SniffsTest"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable" : true,
    "extra": {
        "branch-alias": {
            "dev-master": "2.0-dev"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "process-timeout": 5000,
        "sort-packages": true
    }
}
